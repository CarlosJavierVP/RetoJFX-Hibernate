<BorderPane prefHeight="543.0" prefWidth="784.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controllers.MainController">
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <FlowPane alignment="CENTER_LEFT" prefHeight="117.0" prefWidth="784.0">
               <children>
                  <ImageView fitHeight="150.0" fitWidth="338.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../media/tira-de-pelicula.png" />
                     </image>
                     <FlowPane.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </FlowPane.margin>
                  </ImageView>
                  <Label text="My Copies">
                     <FlowPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </FlowPane.margin>
                     <font>
                        <Font name="Gabriola" size="70.0" />
                     </font>
                  </Label>
                  <HBox alignment="CENTER_RIGHT" prefHeight="160.0" prefWidth="323.0">
                     <children>
                        <Button alignment="CENTER" mnemonicParsing="false" onAction="#btnAllMovies" pickOnBounds="false" style="-fx-background-color: #00000000;" text="All Movies" textAlignment="CENTER">
                           <font>
                              <Font name="Gabriola" size="48.0" />
                           </font>
                           <graphic>
                              <ImageView fitHeight="57.0" fitWidth="72.0" nodeOrientation="RIGHT_TO_LEFT" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../../../media/flecha-derecha2.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </Button>
                     </children>
                  </HBox>
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </FlowPane>
            <TableView fx:id="tableCopies" prefHeight="337.0" prefWidth="784.0">
              <columns>
                <TableColumn fx:id="tablaTitulo" prefWidth="75.0" text="Título" />
                <TableColumn fx:id="tablaEstado" prefWidth="75.0" text="Estado" />
                  <TableColumn fx:id="tablaSoporte" prefWidth="75.0" text="Soporte" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <HBox alignment="CENTER" prefHeight="50.0" prefWidth="784.0">
               <children>
                  <FlowPane alignment="CENTER_RIGHT" columnHalignment="CENTER" prefHeight="50.0" prefWidth="640.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#onBack" prefWidth="80.0" text="Atrás">
                           <FlowPane.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </FlowPane.margin>
                        </Button>
                     </children>
                  </FlowPane>
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
